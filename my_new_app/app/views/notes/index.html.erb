<%= render 'shared/nav' %>

<main>
  <div class="main-div">
    <h1>All Notes</h1>

    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Content</th>
          <th colspan="3">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @notes.each do |note| %>
          <tr>
            <td><%= note.title %></td>
            <td><%= note.content %></td>
            <td><%= link_to 'Show', note %></td>
            <td><%= link_to "<i class='bx bx-edit'></i>".html_safe, edit_note_path(note) %></td>
            <td><%= link_to "<i class='bx bx-trash'></i>".html_safe, delete_note_path(note) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</main>
