<%= render 'shared/nav' %>

<main>
  <div class="main-div">
    <h1>Регистрация</h1>

    <%= form_with model: @user, local: true do |f| %>
      <%= f.label :name, "Имя" %>
      <%= f.text_field :name %>

      <%= f.label :email, "Email" %>
      <%= f.email_field :email %>

      <%= f.label :password, "Пароль" %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Подтверждение пароля" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Зарегистрироваться", class: "button-blue" %>
    <% end %>
  </div>
</main>
