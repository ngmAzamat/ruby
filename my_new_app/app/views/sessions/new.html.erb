<%= render 'shared/nav' %>

<main>
  <div class="main-div">
    <h1>Вход</h1>

    <% if flash[:alert] %>
      <p style="color: red;"><%= flash[:alert] %></p>
    <% end %>

    <%= form_with url: session_path, method: :post, local: true do |f| %>
      <%= f.label :email, "Email" %>
      <%= f.email_field :email %>

      <%= f.label :password, "Пароль" %>
      <%= f.password_field :password %>

      <%= f.submit "Войти", class: "button-blue" %>
    <% end %>
  </div>
</main>
