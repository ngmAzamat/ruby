<%= render 'shared/nav' %>

<div class="main-div">
<h1>События</h1>

<%= link_to "Добавить новое событие", new_event_path %>
<table>
<thead>
<tr>
<th>Название</th>
<th>Дата</th>
<th>Описание</th>
<th>Изображение</th>
<th>Место</th>
<th>Действия</th>
</tr>
</thead>
<tbody>
<% @events.each do |event| %>
  <tr>
    <td><strong><%= event.name %></strong></td>
    <td><%= event.date %></td>
    <td><%= event.description %></td>
    <td>
      <% if event.image.attached? %>
        <%= image_tag event.image, size: "100x100" %>
      <% else %>
        Нет изображения
      <% end %>
    </td>
    <td><%= event.place %></td>
    <td>
    <%= link_to edit_event_path(event) do %>
      <i class='bxr bx-edit'></i>
    <% end %>
    &nbsp
    <%= link_to "/events/#{event.id}/confirm_destroy" do %>
      <i class='bxr bx-trash'></i> 
    <% end %>
    </td>
  </tr>
<% end %>
</tbody>
</table>