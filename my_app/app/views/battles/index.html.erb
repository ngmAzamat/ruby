<%= render 'shared/nav' %>
<div class="main-div">
<h1>Битвы</h1>
<%= link_to "Добавить новую битву", new_battle_path %>
<table>
<thead>
<tr>
<th>Название</th>
<th>Стороны</th>
<th>Победитель</th>
<th>Численность</th>
<th>Действия</th>
</tr>
</thead>
<tbody>
<% @battles.each do |battle| %>
<tr>
    <td><strong><%= battle.name %> <%= battle.date %></strong></td>
    <td><%= battle.first_belligerents %> vs <%= battle.second_belligerents %></td>
    <td><%= battle.who_win %></td>
    <td><%= battle.army_of_first_belligerents %> — <%= battle.army_of_second_belligerents %></td>
    <td>
        <%= link_to edit_battle_path(battle) do %>
            <i class='bxr bx-edit'></i>
        <% end %>
        &nbsp
        <%= link_to "/battles/#{battle.id}/confirm_destroy" do %>
            <i class='bxr bx-trash'></i> 
        <% end %>
    </td>
</tr>
<% end %>
</tbody>
</table>
</div>