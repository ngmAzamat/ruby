<%= render 'shared/nav' %>

<div class="main-div">
<h1>Войны</h1>

<%= link_to "Добавить новую войну", new_war_path %>
<table>
<thead>
<tr>
<th>Название</th>
<th>Первая Сторона</th>
<th>Вторая Сторона</th>
<th>Время Войны</th>
<th>Победила</th>
<th>Название Мирного Договора</th>
<th>Действия</th>
</tr>
</thead>
<tbody>
<% @wars.each do |war| %>
  <tr>
    <td><strong><%= [war.number, war.name].compact.join(" ") %></strong></td>
    <td><%= war.first_belligerents %></td>
    <td><%= war.second_belligerents %> </td>
    <td><%= war.first_year %> – <%= war.last_year %></td>
    <td><%= war.who_win %></td>
    <td><%= war.name_of_the_peace_treaty %></td>
    <td>
    <%= link_to edit_war_path(war) do %>
      <i class='bxr bx-edit'></i>
    <% end %>
    &nbsp
    <%= link_to "/wars/#{war.id}/confirm_destroy" do %>
      <i class='bxr bx-trash'></i> 
    <% end %>
    </td>
  </tr>
<% end %>
</tbody>
</table>