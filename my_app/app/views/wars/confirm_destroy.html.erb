<%= render 'shared/nav' %>

<main>
  <%= form_with(model: @war, method: :delete, local: true) do |form| %>
    <h1>Удалить войну</h1>
    
    <p>
      <%= form.label :name, "Название" %>
      <%= form.text_field :name, readonly: true %>
    </p>
    
    <p>
      <%= form.label :first_belligerents, "Первый Участник" %>
      <%= form.text_field :first_belligerents, readonly: true %>
    </p>

    <p>
      <%= form.label :second_belligerents, "Второй Участник" %>
      <%= form.text_field :second_belligerents, readonly: true %>
    </p>

    <p>
      <%= form.label :number, "Цифра или Прозвище" %>
      <%= form.text_field :number, readonly: true %>
    </p>

    <p>
      <%= form.label :first_year, "Начало Войны" %>
      <%= form.number_field :first_year, readonly: true %>
    </p>

    <p>
      <%= form.label :last_year, "Конец Войны" %>
      <%= form.number_field :last_year, readonly: true %>
    </p>

    <p>
      <%= form.label :who_win, "Кто Победил" %>
      <%= form.text_field :who_win, readonly: true %>
    </p>

    <p>
      <%= form.label :name_of_the_peace_treaty, "Название Мирного Договора" %>
      <%= form.text_field :name_of_the_peace_treaty, readonly: true %>
    </p>

    <p>
      <%= form.submit "Удалить", data: { confirm: 'Вы уверены?' }, class: "button-red" %>
    </p>
  <% end %>
</main>
