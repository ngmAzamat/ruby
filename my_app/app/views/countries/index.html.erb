<%= render 'shared/nav' %>

<div class="main-div">
<h1>Страны</h1>
<%= link_to "Добавить новую страну", new_country_path %>
<table>
<thead>
<tr>
<th>Название</th>
<th>Численность армии</th>
<th>Численность населения</th>
<th>Площадь строны в квадратных километрах</th>
<th>Время сущствования</th>
<th>Действия</th>
</tr>
</thead>
<tbody>
<% @countries.each do |country| %>
  <tr>
    <td><strong><%= country.name %></strong></td>
    <td><%= country.army %></td>
    <td><%= country.population %></td>
    <td><%= country.area %></td>
    <td><%= country.first_year %> — <%= country.last_year %></td>
    <td>
      <%= link_to edit_country_path(country) do %>
        <i class='bxr bx-edit'></i>
      <% end %>
      &nbsp
      <%= link_to "/countries/#{country.id}/confirm_destroy" do %>
        <i class="bxr bx-trash"></i>
      <% end %>
    </td>
  </tr>
<% end %>
</tbody>
</table>
</div>